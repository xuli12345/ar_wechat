/* pages/detail/detail.wxss */

page {
  height: 100%;
}

.loading-btn-ar {
  position: fixed;
  bottom: 20px;
  width: 204px;
  text-align: center;
  margin-left: 50px;
}

.loading-btn-ar button {
  background: none;
  width: 500rpx;
  height: 110rpx;
  line-height: 110rpx;
  color: #fff;
}

.scoll {
  margin-top: -10rpx;
  padding-top: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 10rpx;
  height: 750rpx;
  background: #2b2b2b;
}

scroll-view {
  height: 100%;
  background: #2b2b2b;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

text {
  display: block;
  width: 100%;
  white-space: normal;
  color: #fff;
  font-size: 24rpx;
}

image {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.mask .tips {
  width: 500rpx;
  height: 300rpx;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -200rpx;
  border-radius: 40rpx;
  padding: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
  
}
.mask .tips .desc{
color: #333;
font-size:14px; 
line-height: 50rpx;
}
.mask .tips button.phone {
  height: 70rpx;
  line-height: 70rpx;
  width: 400rpx;
  left: 50%;
  margin-left: -200rpx;
  background-color: #cd0000;
  border-radius:35rpx; 
  color: #fff;
  margin-top: 60rpx;
  font-size: 14px;
}