/* pages/loading/loading.wxss */

page {
  height: 100%;
}

.loading-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.loading-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.userinfo-btn-ar {
  position: absolute;
  bottom: 80rpx;
  width: 100%;
  text-align: center;
}

.userinfo-btn-ar button {
  background: none;
  width: 500rpx;
  height: 110rpx;
  line-height: 110rpx;
  color: #fff;
  background-repeat: no-repeat;
  border: none;
}



.userinfo-btn-ar .tip {
  color: #fff;
  font-size: 12px;
  margin-top: 40rpx;
  display: inline-block;
}
